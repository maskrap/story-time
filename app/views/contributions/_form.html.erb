<%= render 'layouts/errors', :object => @contribution %>

<%= image_tag @rand %>

<%= form_for [@story, @contribution] do |f| %>
  <%= f.hidden_field :image, :value => @rand %>
  <%= f.label :sentence %>
  <%= f.text_field :sentence, :maxlength => 140%>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.submit  %>
<% end %>
